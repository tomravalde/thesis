isbn = {1879-2456 (Electronic)$\backslash$r0956-053X (Linking)},
issn = {0956053X},
journal = {Waste Management},
keywords = {Economics,Energy recovery technologies,LCA,Sewage sludge},
number = {1},
pages = {185--195},
pmid = {24060290},
publisher = {Elsevier Ltd},
title = {{Environmental {\&} economic life cycle assessment of current {\&} future sewage sludge to energy technologies}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/24060290},
volume = {34},
year = {2014}
