#!/bin/bash

## Setup directories to store data and plots
mkdir model/results/cluster-results
mkdir model/results/cluster-results/$1
mkdir model/results/cluster-results/$1/data
mkdir model/results/cluster-results/$1/plots

## Copy data from cluster to machine
scp tr608@ps-lfe01.ps.ic.ac.uk:~/ShannGu/model/cluster-results/$1/*.csv model/results/cluster-results/$1/data
scp tr608@ps-lfe01.ps.ic.ac.uk:~/ShannGu/model/cluster-results/$1/*.lst model/results/cluster-results/$1/data

## Process and plot data using Rscript
Rscript results-processing.R cluster-results/$1
